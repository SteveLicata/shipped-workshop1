<%= form_for Boat.new do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br>

<%= f.label :maxcontainers %>
<%= f.number_field :maxcontainers %> <br>

<%= f.label :company %><br>
<%= f.collection_select :company_id, Company.all, :id, :email %><br>


<%= f.label :location %><br>
<%= f.select :location, ["Mexico", "Spain", "Dubai", "NYC", "Florida", "Cuba"], prompt: :select %><br><br>

<%= f.file_field :image %>


  <%= f.submit %>
<% end %>
